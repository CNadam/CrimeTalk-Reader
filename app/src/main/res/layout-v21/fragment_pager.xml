<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <uk.org.crimetalk.views.TabStrip
        xmlns:tabstrip="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tabstrip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/crimetalk_red"
        android:elevation="@dimen/toolbar_elevation"
        tabstrip:pstsActivateTextColor="@color/white"
        tabstrip:pstsDeactivateTextColor="@color/light_gray"
        tabstrip:pstsDividerColor="@android:color/transparent"
        tabstrip:pstsIndicatorColor="@color/white"
        tabstrip:pstsIndicatorHeight="2dp"
        tabstrip:pstsUnderlineHeight="0dp"
        tabstrip:pstsIndicatorPadding="12dp"
        style="@style/Theme.CrimeTalk" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>